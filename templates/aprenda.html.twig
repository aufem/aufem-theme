{% embed 'partials/index.html.twig' %}

  {% set collection = page.collection() %}

  {% block content %}
    {% if config.plugins.breadcrumbs.enabled %}
      {% include 'partials/breadcrumbs.html.twig' %}
    {% endif %}

    {% set aprenda_image = page.media.images|first.grayscale().contrast(20).brightness(-100).colorize(-35,81,122) %}

    {% if aprenda_image %}
    <div class="flush-top blog-header blog-header-image" style="background-image: url({{ blog_image.url }});">
    {% else %}
    <div class="blog-header">
    {% endif %}
      <main>
      <div class="post">
      <h1 class="center">{{ page.title }}</h1>
      {{ page.content }}

      <div class="center"><br>
        <a class="button" href="{{ base_url }}/aprenda.rss"><i class="fa fa-rss">&nbsp;</i>RSS</a>&nbsp;&nbsp;<a class="button" href="{{ base_url }}/aprenda.atom"><i class="fa fa-rss">&nbsp;</i>Atom 1.0</a>
      </div>

      {% include 'partials/comments.html.twig' with {'page': page} %}

      <div class="center">
          {% if not page.isFirst %}
            <nav class="prev">
              <a href="{{ page.nextSibling.url }}">
                <span class="arrow">←</span>
                {{ page.nextSibling.title }}
              </a>
            </nav>
          {% endif %}

            <nav class="prev">
              <a href="../aprenda">
                Todos os artigos
              </a>
            </nav>

          {% if not page.isLast %}
            <nav class="next">
              <a href="{{ page.prevSibling.url }}">{{ page.prevSibling.title }}
                <span class="arrow">→</span>
              </a>
            </nav>
          {% endif %}
        </div>
      </div>
    </div>

    </main>
    </div>

    <div class="content-wrapper"> {# container / columns #}
      <div>
        {% for child in collection %}
              <article>
                {% include 'partials/aprenda_item.html.twig' with {'blog':page, 'page':child, 'truncate':true} %}
            </article>
          {% endfor %}

                {% if config.plugins.pagination.enabled and collection.params.pagination %}
                    {% include 'partials/pagination.html.twig' with {'base_url':page.url, 'pagination':collection.params.pagination} %}
                {% endif %}
{#      <div id="sidebar" class="block size-1-3 pure-u-1-3">
        {% include 'partials/sidebar.html.twig' with {'blog':page} %}
      </div> #}
    </div>
    </div>
  {% endblock %}

{% endembed %}